<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewImageTextValue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ironman" />

    <TextView
        android:id="@+id/textViewImageTextValueValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Medium Text" />

    <TextView
        android:id="@+id/textViewImageTextValueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageViewImageTextValue"
        android:layout_toLeftOf="@+id/textViewImageTextValueValue"
        android:layout_toRightOf="@+id/imageViewImageTextValue"
        android:layout_toStartOf="@+id/textViewImageTextValueValue"
        android:text="Medium Text" />
</RelativeLayout>